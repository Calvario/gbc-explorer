extends layout
block content

  div.container.pb-4
    div.box
      h4.title.is-4 Address
      <!-- Full -->
      div.columns.is-multiline.is-mobile
        <!-- Left -->
        div.column.is-half-desktop.is-full-mobile
          <!-- Rows -->
          div.columns.is-mobile.is-multiline
            <!-- Row -->
            div.column.is-full.bottom-border
              div.columns.is-mobile
                div.column.is-half-desktop.is-narrow-mobile
                  p.has-text-weight-bold Hash
                div.column.is-half-desktop
                  span.text-overflow-dynamic-container
                    span.text-overflow-dynamic-ellipsis.has-text-right
                      span#addressHash
            <!-- Row -->
            div.column.is-full.bottom-border
              div.columns.is-mobile
                div.column.is-half-desktop.is-narrow-mobile
                  p.has-text-weight-bold Label
                div.column.is-half-desktop
                  p#addressLabel.has-text-right
            <!-- Row -->
            div.column.is-full.bottom-border
              div.columns.is-mobile
                div.column.is-half-desktop.is-narrow-mobile
                  p.has-text-weight-bold Balance
                div.column.is-half-desktop
                  p#addressBalance.has-text-right


        <!-- Right -->
        div.column.is-half-desktop.is-full-mobile
          <!-- Rows -->
          div.columns.is-mobile.is-multiline
            <!-- Row -->
            div.column.is-full.bottom-border
              div.columns.is-mobile
                div.column.is-half-desktop.is-narrow-mobile
                  p.has-text-weight-bold Transactions
                div.column.is-half-desktop
                  p#addressTransactions.has-text-right

            <!-- Row -->
            div.column.is-full.bottom-border
              div.columns.is-mobile
                div.column.is-half-desktop.is-narrow-mobile
                  p.has-text-weight-bold Inputs
                div.column.is-half-desktop
                  p#addressInputs.has-text-right
            <!-- Row -->
            div.column.is-full.bottom-border
              div.columns.is-mobile
                div.column.is-half-desktop.is-narrow-mobile
                  p.has-text-weight-bold Outputs
                div.column.is-half-desktop
                  p#addressOutputs.has-text-right

      <!-- Transactions -->
      h4.title.is-4.mt-4 Transactions
      div.table-container.pr-1.pl-1
        table(
          data-toggle="table"
          data-show-toggle="true"
          data-mobile-responsive="true"
          data-ajax="addressTransactions"
          data-buttons-class="button"
          data-show-refresh="true"
          data-show-fullscreen="true"
          data-show-columns="true"
          data-show-columns-toggle-all="true"
          data-auto-refresh="true"
          data-pagination="true"
          data-page-size="10"
          data-pagination-successively-size="1"
        )#addressTransactionsTable.table.is-striped.is-hoverable.is-fullwidth
          thead
            tr
              th(data-halign="left" data-align="left" data-field="transaction_txid" data-formatter="addressTransactionsTransaction") Transaction
              th(data-halign="right" data-align="right" data-formatter="addressTransactionsBlock") Height Block
              th(data-halign="right" data-align="right" data-field="block_time" data-formatter="formatEpochToDate") Height Time
              th(data-halign="right" data-align="right" data-formatter="addressTransactionsValue") Amount
          tbody