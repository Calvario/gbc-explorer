extends layout
block content

  div.container.pb-4
    div.box
      <!-- Blocks -->
      h4.title.is-4 Latest blocks for #
        a#extractionAddress
      div.table-container.pr-1.pl-1
        table(
          data-toggle="table"
          data-show-toggle="true"
          data-mobile-responsive="true"
          data-ajax="extractionBlocks"
          data-buttons-class="button"
          data-show-refresh="true"
          data-show-fullscreen="true"
          data-show-columns="true"
          data-show-columns-toggle-all="true"
          data-auto-refresh="true"
          data-pagination="true"
          data-page-size="10"
          data-pagination-successively-size="1"
        )#extractionTable.table.is-striped.is-hoverable.is-fullwidth
          thead
            tr
              th(data-halign="right" data-align="right" data-field="height" data-sortable="true" data-formatter="homeBlocksBlockLink") Height
              th(data-halign="right" data-align="right" data-field="time" data-formatter="formatEpochToAge") Time
              th(data-halign="right" data-align="right" data-field="generation" data-sortable="true" data-formatter="formatNumberCoin") Generation
              th(data-halign="right" data-align="right" data-field="feesT" data-sortable="true" data-formatter="formatNumberCoin") Fees
              th(data-halign="right" data-align="right" data-field="difficulty" data-sortable="true" data-formatter="formatNumberDifficulty") Difficulty
          tbody