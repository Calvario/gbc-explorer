doctype html
html
  head
    meta(charset='utf-8')
    title #{process.env.APP_TITLE}
    meta(name="title" content=`${process.env.APP_TITLE}`)
    meta(name="description" content="Global Blockchain Explorer RPC")
    meta(name="keywords" content="blockchain, explorer, rpc, gbc-explorer")
    meta(name="robots" content="index, follow")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="mobile-web-app-capable" content="yes")
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png")
    link(rel="manifest" href="/assets/site.webmanifest")
    link(rel='stylesheet' href='/assets/css/main.css')
    link(rel='stylesheet' href='/assets/vendor/css/bulma/bulma.min.css')
    link(rel='stylesheet' href='/assets/vendor/bootstrap-table/themes/bulma/bootstrap-table-bulma.min.css')
    link(rel='stylesheet' href='/assets/vendor/fontawesome-free/css/all.min.css')

  body.has-background-light
  
    <!-- Page wrapper -->
    div#wrapper

      <!-- Navigation -->
      nav#pageNavigation(role="navigation" aria-label="main navigation").navbar.is-dark
        div.container
          div.navbar-brand
            a(href="/#homeBlocks").navbar-item
              img(src="/assets/images/logo.png" width="64px" height="64px")
            a(href="/#homeBlocks").navbar-item
              span.is-size-4 #{process.env.APP_TITLE}
            a(aria-label="menu" aria-expanded="false" height="64px").navbar-burger
              span(aria-hidden="true")
              span(aria-hidden="true")
              span(aria-hidden="true")
          div.navbar-menu
            div.navbar-start
              div.navbar-item.has-dropdown
                a.navbar-link Info
                div.navbar-dropdown.is-boxed
                  <!-- a(href="/#homeDaily").navbar-item Daily stats -->
                  a(href="/#homeBlocks").navbar-item Latest blocks
                  a(href="/#homeTransactions").navbar-item Latest transactions
                  a(href="/#homeRichList").navbar-item Rich list
              div.navbar-item.has-dropdown
                a.navbar-link Network
                div.navbar-dropdown.is-boxed
                  a(href="/#homeExtraction").navbar-item Extraction
                  <!-- a(href="/#homeMempool").navbar-item Mempool -->
                  a(href="/#homePeers").navbar-item Peers
              div.navbar-item.has-dropdown
                a.navbar-link Tools
                div.navbar-dropdown.is-boxed
                  a(href="/#homePushTx").navbar-item Push transaction
                  a(href="/#homeDecodeTx").navbar-item Decode transaction
              a(href="/#homeCharts").navbar-item Charts
              a(href="/#homeMarket").navbar-item Markets
              a(href="/#homeNews").navbar-item News

            div.navbar-end
              div.navbar-item
                div.buttons.is-centered
                  if(process.env.COIN_TELEGRAM)
                    a(href=`${process.env.COIN_TELEGRAM}` target="_blank").button.is-dark
                      span.icon
                        i.fab.fa-2x.fa-telegram
                  if(process.env.COIN_TWITTER)
                    a(href=`${process.env.COIN_TWITTER}` target="_blank").button.is-dark
                      span.icon
                        i.fab.fa-2x.fa-twitter
                  if(process.env.COIN_REDDIT)
                    a(href=`${process.env.COIN_REDDIT}` target="_blank").button.is-dark
                      span.icon
                        i.fab.fa-2x.fa-reddit
                  if(process.env.COIN_FACEBOOK)
                    a(href=`${process.env.COIN_FACEBOOK}` target="_blank").button.is-dark
                      span.icon
                        i.fab.fa-2x.fa-facebook
                  if(process.env.COIN_SLACK)
                    a(href=`${process.env.COIN_SLACK}` target="_blank").button.is-dark
                      span.icon
                        i.fab.fa-2x.fa-slack
                  if(process.env.COIN_GITHUB)
                    a(href=`${process.env.COIN_GITHUB}` target="_blank").button.is-dark
                      span.icon
                        i.fab.fa-2x.fa-github
                  if(process.env.COIN_SITE)
                    a(href=`${process.env.COIN_SITE}` target="_blank").button.is-dark
                      span.icon
                        i.fas.fa-2x.fa-globe

      <!-- Content -->
      div#pageContent.columns.is-multiline

        <!-- Search -->
        div.column.is-full
          div.container
            div.control.has-icons-left.is-expanded
              input(type="search" placeholder="Search for address, block, transaction")#layoutSearch.input.is-rounded
              span.icon.is-left
                  i.fas.fa-search

        <!-- Page content -->
        div.column.is-full
          div.container
            block content

    <!-- Footer -->
    footer
      div#footerColumns.columns.is-multiline
        div.column.is-full.has-background-dark
          div.container
            nav.level.is-mobile
              div.level-left
                p.level-item
                  a(href="https://github.com/Calvario/gbc-explorer" target="_blank").button.is-dark
                    span.icon
                      i.fab.fa-2x.fa-github
              div.level-right
                p.level-item
                  a(href="/api" target="_blank").button.is-dark API
                p.level-item
                  a(href="/faq" target="_blank").button.is-dark FAQ

    script.
      var COIN_SYMBOL = "#{process.env.COIN_SYMBOL}";
      var COIN_TYPE = "#{process.env.COIN_TYPE}";
      var COIN_CONFIRMATIONS = "#{process.env.COIN_CONFIRMATIONS}";
      var COINGECKO_SYMBOL = "#{process.env.COINGECKO_SYMBOL}";
    script(src='/assets/vendor/js/jquery/jquery.min.js')
    script(src='/assets/vendor/js/moment/moment.js')
    script(src='/assets/vendor/js/hammerjs/hammer.min.js')
    script(src='/assets/vendor/js/chart.js/Chart.min.js')
    script(src='/assets/vendor/js/chartjs-plugin-zoom/chartjs-plugin-zoom.js')
    script(src='/assets/vendor/bootstrap-table/bootstrap-table.min.js')
    script(src='/assets/vendor/bootstrap-table/themes/bulma/bootstrap-table-bulma.min.js')
    script(src='/assets/vendor/bootstrap-table/extensions/mobile/bootstrap-table-mobile.min.js')
    script(src='/assets/vendor/bootstrap-table/extensions/auto-refresh/bootstrap-table-auto-refresh.min.js')
    script(src='/assets/js/main.js')